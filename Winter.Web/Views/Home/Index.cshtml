@model IEnumerable<Winter.Web.Models.Story>

@{
    ViewBag.Title = "British Humour";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedDate)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @if (item.VideoURL != null)
                {
                    <iframe width="210" height="158" src="@item.VideoURL" frameborder="0" allowfullscreen></iframe>
                }

                @if (item.ImageURL != null)
                {
                    <img src="@item.ImageURL" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoryType.Name)
            </td>

        </tr>
    }
</table>
