@model IEnumerable<Winter.Web.Models.Story>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Rating
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            URL
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedDate)
        </th>
        <th>
            Story Type
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @if (item.VideoURL != null)
                {
                    <iframe width="210" height="158" src="@item.VideoURL" frameborder="0" allowfullscreen></iframe>
                }

                @if (item.ImageURL != null)
                {
                    <img src="@item.ImageURL" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoryType.Name)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StoryID }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.StoryID }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.StoryID })
            </td>
        </tr>
    }

</table>
